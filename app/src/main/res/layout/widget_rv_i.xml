<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/widget"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:backgroundTint="?colorAccent"
            android:background="@drawable/widget_toolbar_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center|start"
                android:padding="4dp"
                android:singleLine="true"
                android:textColor="#fafafa"
                android:textSize="12sp"
                tools:text="Counter" />

            <ImageView
                android:id="@+id/widget_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/widget_ic_ripple"
                android:paddingStart="4dp"
                android:clickable="false"
                android:focusable="false"
                android:paddingTop="8dp"
                android:paddingEnd="4dp"
                android:paddingBottom="8dp"
                android:src="@drawable/ic_widget_minus" />

            <ImageView
                android:id="@+id/widget_fullscreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/widget_ic_ripple"
                android:paddingStart="4dp"
                android:paddingTop="8dp"
                android:clickable="false"
                android:focusable="false"
                android:paddingEnd="4dp"
                android:paddingBottom="8dp"
                android:src="@drawable/ic_fullscreen_widget" />
        </LinearLayout>

        <TextView
            android:id="@+id/widget_item_value"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/widget_value_bg"
            android:backgroundTint="#EFEFEF"
            android:ellipsize="middle"
            android:gravity="center"
            android:padding="0.5dp"
            android:textColor="#000000"
            android:clickable="false"
            android:focusable="false"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="50sp"
            tools:text="222" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>